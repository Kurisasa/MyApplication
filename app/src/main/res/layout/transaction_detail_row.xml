<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agro Ground Nut - 500g"
            android:textColor="@color/navy_blue"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/quantity_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:text="0"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:textColor="@color/gray_transparent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/textview_rounded_corner"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qty"
                        android:textSize="12sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="450"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:textColor="@color/gray_transparent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/textview_rounded_corner"/>

                    <TextView
                        android:id="@+id/tv_priceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textSize="12sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vat_percent_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_vat_percent"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="25"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:textColor="@color/gray_transparent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/textview_rounded_corner"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vat_percent"
                        android:textSize="12sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vat_value_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_vat_value"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="15"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:textColor="@color/gray_transparent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/textview_rounded_corner"/>

                    <TextView
                        android:id="@+id/tv_vatLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vat_dollar"
                        android:textSize="12sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_total_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R 1505"
                    android:textSize="18sp"
                    android:textColor="@color/navy_blue"
                    />

                <TextView
                    android:layout_below="@id/tv_total_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="12sp"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_transparent"/>

</LinearLayout>